<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Button

        ohos:text_size="40fp"
        ohos:id="$+id:singlePickDialogButton"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:text="Single pick"
        ohos:theme="@style/AccentButton"/>

    <Button

        ohos:text_size="40fp"
        ohos:id="$+id:multiPickDialogButton"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:text="Multi pick"
        ohos:theme="@style/AccentButton"/>

    <Button

        ohos:text_size="40fp"
        ohos:id="$+id:multiPickDefaultDialogButton"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:text="Multi pick (Default style)"
        ohos:theme="@style/AccentButton"/>


</DirectionalLayout>